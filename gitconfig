[color]
	ui = true
[core]
	editor = vim
	pager = less -+F
	excludesfile = ~/dotfiles/gitignore_global
[push]
	default = simple
[merge]
	conflictstyle = diff3
[commit]
	template = ~/dotfiles/git-commit-message
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --graph
